@model TestApplication.Models.PersonAndHospView

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Person</h2>

@using (Html.BeginForm("Create", "User", new { @class = "form-horiztonal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Person.Name)
        @Html.TextBoxFor(m => m.Person.Name, new { @class = "form-control", @id = "nonhosptialDepartDropDown" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Person.Age)
        @Html.TextBoxFor(m => m.Person.Age, new { @class = "form-control", @id = "nonhosptialDepartDropDown" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Person.livesInUK) Lives in Uk?
        </label>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Person.HospitalDept)
        @Html.DropDownListFor(m => m.Person.HospitalDept, new SelectList(Model.HospitalDepartments, "id", "Name"), Model.currentlySelected, new { @id = "hosptialDepartDropDown" })
    </div>

}

